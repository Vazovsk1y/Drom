<UserControl x:Class="ClothesStore.WPF.Views.CatalogPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vms="clr-namespace:ClothesStore.WPF.ViewModels"
             xmlns:models="clr-namespace:ClothesStore.WPF.DAL.Models"
             FontFamily="{StaticResource MaterialDesignFont}"
             xmlns:infr="clr-namespace:ClothesStore.WPF.Infrastructure"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance vms:CatalogPageViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <infr:CurrentUserRoleVisibilityConverter x:Key="CurrentUserRoleVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding BackCommand}">
                <materialDesign:PackIcon Kind="ArrowLeft"/>
            </Button>
            <StackPanel Orientation="Horizontal"
                        Visibility="{Binding SelectedProduct, Converter={x:Static vms:MainWindowViewModel.InverseNullableToVisibilityConverter}}"
                        Margin="10, 0, 0, 0">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Поиск..."
                         MinWidth="750"
                         FontSize="16"/>
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding SearchCommand}">
                    <materialDesign:PackIcon Kind="Search"/>
                </Button>
            </StackPanel>
            
        </StackPanel>
        
        <ScrollViewer Grid.Row="1"
                      Visibility="{Binding SelectedProduct, Converter={x:Static vms:MainWindowViewModel.InverseNullableToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding CatalogItemsView}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"
                                   Orientation="Horizontal"
                                   Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="5, 0, 0, 0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <b:InvokeCommandAction Command="{Binding DataContext.ProductSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                           CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <StackPanel>
                                <Image Source="{Binding MainImage}"
                                       Height="205"
                                       Width="270"
                                       HorizontalAlignment="Center"
                                       Stretch="UniformToFill" />
                                <TextBlock Text="{Binding Title}"
                                           FontSize="18"
                                           Margin="5,10,5,0"
                                           TextAlignment="Center"
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding Price, StringFormat={}{0} ₽}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center"
                                           Margin="5,0,5,5" />
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <materialDesign:Card Grid.Row="1"
                             Padding="16"
                             Margin="16"
                             Visibility="{Binding SelectedProduct, Converter={StaticResource NullableToVisibilityConverter}}">
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <Image Source="{Binding SelectedProduct.SelectedImage}"
                               MaxHeight="350"
                               Stretch="Uniform"/>
                        <ListBox ItemsSource="{Binding SelectedProduct.Images}"
                                 SelectedItem="{Binding SelectedProduct.SelectedImage}"
                                 SelectionMode="Single"
                                 Margin="0, 10, 0,0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding}"
                                           Height="100"
                                           Width="120"
                                           Stretch="Fill"
                                           Margin="10"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBox HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Top"
                                 Margin="0, 10, 5, 0"
                                 IsReadOnly="True"
                                 FontSize="16"
                                 Text="{Binding SelectedProduct.Description}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Описание"
                                 MinHeight="100"
                                 TextWrapping="Wrap" />
                        
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Margin="0, 4, 0, 0">
                        
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Visibility="{Binding DataContext.CurrentUser, 
                                RelativeSource={RelativeSource AncestorType=Window}, 
                                Converter={StaticResource CurrentUserRoleVisibilityConverter}, 
                                ConverterParameter={x:Static models:Role.Admin}}"
                                    Margin="4, 0, 0, 0"
                                    Command="{Binding EditSelectedProductCommand}">
                                <materialDesign:PackIcon Kind="Edit"/>
                            </Button>
                        
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Visibility="{Binding DataContext.CurrentUser, 
                                RelativeSource={RelativeSource AncestorType=Window}, 
                                Converter={StaticResource CurrentUserRoleVisibilityConverter}, 
                                ConverterParameter={x:Static models:Role.Admin}}"
                                    Margin="4, 0, 0, 0"
                                    Command="{Binding DeleteSelectedProductCommand}">
                                <materialDesign:PackIcon Kind="Delete"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </materialDesign:Card>

    </Grid>
</UserControl>